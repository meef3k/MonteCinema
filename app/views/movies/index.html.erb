<div class="card w-75 my-3 m-auto border-0">
<h1>Movies</h1>
<p style="color: green"><%= notice %></p>
</div>

<table class="table table-hover w-75 mx-auto">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Duration</th>
      <th scope="col">Show</th>
      <% if current_user && policy(@movies).new? %>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.duration %></td>
        <td>
          <%= button_to "Show", movie_path(movie), method: :get, class: 'btn btn-primary' %>
        </td>
        <% if current_user && policy(@movies).new? %>
          <td>
            <%= button_to "Edit", edit_movie_path(movie), method: :get, class: 'btn btn-secondary' %>
          </td>
          <td>
            <%= button_to "Delete", movie, method: :delete, class: 'btn btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

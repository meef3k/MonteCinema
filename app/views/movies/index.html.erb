<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<table class="table table-hover w-75 mx-auto">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Duration</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.duration %></td>
        <td>
          <%= button_to "Show", movie_path(movie), method: :get, class: 'btn btn-primary' %>
        </td>
        <td>
          <%= button_to "Edit", edit_movie_path(movie), method: :get, class: 'btn btn-secondary' %>
        </td>
        <td>
          <%= button_to "Delete", movie, method: :delete, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

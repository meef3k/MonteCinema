<div id="<%= dom_id seance %>" class="card w-50 p-3 mx-auto col-md-3">
  <div class="card-body">
    <h5 class="card-title"><%= seance.movie.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"> <%= seance.price %>$</h6>
    <p class="card-text"><%= formatted_date(seance.starts_at) %></p>
    <p class="card-text"><%= seance.hall.name %></p>
  </div>
  <%= button_to "Delete", seance, method: :delete, class: 'btn btn-danger' %>
</div>
<%= form_with(model: seance) do |form| %>
  <% if seance.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(seance.errors.count, "error") %> prohibited this seance from being saved:</h2>

      <ul>
        <% seance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :starts_at, style: "display: block" %>
    <%= form.datetime_field :starts_at %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, class: "form-label" %>
  </div>

  <div>
     <% options = options_from_collection_for_select(@movies, 'id', 'title') %>
     <%= form.select :movie_id,  options %>
   </div>

   <div>
     <% options = options_from_collection_for_select(@halls, 'id', 'name') %>
     <%= form.select :hall_id,  options %>
  </div>

  <div class="col-auto">
    <%= form.submit class: 'btn btn-primary mb-3' %>
  </div>

  <div class="col-auto">
    <%= link_to "Back to seances", seances_path, class: 'btn btn-primary mb-3' %>
  </div>
<% end %>

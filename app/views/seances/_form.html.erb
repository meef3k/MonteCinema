<%= form_with(model: seance) do |form| %>
  <% if seance.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(seance.errors.count, "error") %> prohibited this seance from being saved:</h2>

      <ul>
        <% seance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row my-2">
    <%= form.label :starts_at, style: "display: block", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.datetime_field :starts_at, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row my-2">
    <%= form.label :price, style: "display: block", class: "col-sm-2 col-form-label" %> 
    <div class="col-sm-10">
      <%= form.text_field :price, class: "form-control", placeholder: "Enter price" %>
    </div>
  </div>

  <div class="form-group row my-2">
    <%= form.label :movie, style: "display: block", class: "col-sm-2 col-form-label" %> 
    <% options = options_from_collection_for_select(@movies, 'id', 'title') %>
    <div class="col-sm-10">
      <%= form.select :movie_id, options, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row my-2">
    <%= form.label :hall, style: "display: block", class: "col-sm-2 col-form-label" %> 
    <% options = options_from_collection_for_select(@halls, 'id', 'name') %>
    <div class="col-sm-10">
      <%= form.select :hall_id, options, class: "form-control" %>
    </div>
  </div>

  <div class="col-auto my-2">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>